@model CMSCore.Models.Page

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Page</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PageGroupID" class="control-label"></label>
                <select asp-for="PageGroupID" class ="form-control" asp-items="ViewBag.PageGroupID"></select>
            </div>
            <div class="form-group">
                <label asp-for="PageTitle" class="control-label"></label>
                <input asp-for="PageTitle" class="form-control" />
                <span asp-validation-for="PageTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageShortText" class="control-label"></label>
                <input asp-for="PageShortText" class="form-control" />
                <span asp-validation-for="PageShortText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageText" class="control-label"></label>
                <input asp-for="PageText" class="form-control" />
                <span asp-validation-for="PageText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageDate" class="control-label"></label>
                <input asp-for="PageDate" class="form-control" />
                <span asp-validation-for="PageDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PageIsPublished" /> @Html.DisplayNameFor(model => model.PageIsPublished)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
